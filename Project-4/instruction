#define	INSTRUCTION_H
// Author: Leo & Olivia
#include <cstddef>
#include <iostream>
#include <fstream>
#include <iomanip>

using namespace std;

class Instruction
{
    int address;
    char* info;

    public:
    Instruction();
    ~Instruction();
    char* getInfo() const;
    void setInfo(const char* space);
    void setAddress(int a);
    int getAddress() const;
}; // class
